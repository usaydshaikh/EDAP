<!-- Optionally include Animate.css (for advanced animations) -->
<link
  rel="stylesheet"
  href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"
/>

<style>
  :root {
    --hero-height: 100vh;
    --overlay-start: rgba(0, 0, 0, 0.3);
    --overlay-end: rgba(0, 0, 0, 0.8);
    --primary-color: #4e73df;
    --accent-color: #f6c23e;
    --transition-speed: 0.5s;
  }

  /* HERO SECTION CONTAINER */
  .hero-container {
    position: relative;
    height: var(--hero-height);
    overflow: hidden;
  }
  /* Carousel item (each slide) styling */
  .hero-carousel-item {
    position: relative;
    height: var(--hero-height);
    background-size: cover;
    background-position: center;
  }
  .hero-carousel-item img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    filter: brightness(0.75);
    transition: transform 10s ease;
  }
  .hero-carousel-item:hover img {
    transform: scale(1.05);
  }
  /* Gradient overlay for text readability */
  .hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(180deg, var(--overlay-start) 0%, var(--overlay-end) 100%);
    z-index: 1;
  }
  /* Caption container */
  .hero-content {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 2;
    color: #fff;
    text-align: center;
    padding: 0 20px;
  }
  .hero-content h1 {
    font-size: 4rem;
    font-weight: bold;
    margin-bottom: 1rem;
    animation: fadeInDown 1s ease-out;
  }
  .hero-content p {
    font-size: 1.5rem;
    max-width: 800px;
    margin: 0 auto 2rem;
    animation: fadeInUp 1s ease-out 0.5s;
    animation-fill-mode: both;
  }
  /* CTA Buttons Group */
  .hero-buttons .btn {
    margin: 0 10px;
    padding: 1rem 2rem;
    border: none;
    border-radius: 50px;
    font-size: 1rem;
    transition: background var(--transition-speed);
  }
  .btn-primary {
    background-color: var(--primary-color);
    color: #fff;
  }
  .btn-primary:hover {
    background-color: #3a5bb8;
  }
  .btn-secondary {
    background-color: var(--accent-color);
    color: #fff;
  }
  .btn-secondary:hover {
    background-color: #d9a21a;
  }
  @keyframes fadeInDown {
    from {
      opacity: 0;
      transform: translateY(-20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  /* Scroll Down Indicator */
  .scroll-indicator {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    z-index: 3;
    cursor: pointer;
  }
  .scroll-indicator svg {
    width: 40px;
    height: 40px;
    fill: #fff;
    animation: bounce 2s infinite;
  }
  @keyframes bounce {
    0%, 20%, 50%, 80%, 100% { transform: translateX(-50%) translateY(0); }
    40% { transform: translateX(-50%) translateY(-10px); }
    60% { transform: translateX(-50%) translateY(-5px); }
  }
  /* Carousel controls styling */
  .carousel-control-prev-icon,
  .carousel-control-next-icon {
    background-color: rgba(0, 0, 0, 0.5);
    padding: 20px;
    border-radius: 50%;
  }
  /* Responsive adjustments */
  @media(max-width: 768px) {
    .hero-content h1 {
      font-size: 2.5rem;
    }
    .hero-content p {
      font-size: 1.25rem;
    }
    .hero-container {
      height: 70vh;
    }
  }
</style>

<main class="flex-grow-1">
  <!-- HERO SECTION -->
  <section class="hero-container">
    <div
      id="heroCarousel"
      class="carousel slide carousel-fade"
      data-bs-ride="carousel"
      data-bs-interval="7000"
      aria-label="Professional Hero Carousel"
    >
      <div class="carousel-inner">
        <!-- Slide 1 -->
        <div class="carousel-item active hero-carousel-item">
          <img src="/images/1.jpeg" alt="Professional Energy Generation" loading="lazy">
          <div class="hero-overlay"></div>
          <div class="hero-content">
            <h1 class="animate__animated animate__fadeInDown animate__slow">Empowering Energy Solutions</h1>
            <p class="animate__animated animate__fadeInUp animate__slower">
              Experience cuttingâ€‘edge technology that propels us toward a sustainable future.
            </p>
            <div class="hero-buttons">
              <a href="/faq" class="btn btn-primary animate__animated animate__zoomIn animate__delay-1s" aria-label="Learn more via FAQ">Learn More</a>
              <a href="/contact" class="btn btn-secondary animate__animated animate__zoomIn animate__delay-1s" aria-label="Contact Us">Contact Us</a>
            </div>
          </div>
        </div>
        <!-- Slide 2 -->
        <div class="carousel-item hero-carousel-item">
          <img src="/images/2.jpeg" alt="Innovative Renewable Energy" loading="lazy">
          <div class="hero-overlay"></div>
          <div class="hero-content">
            <h1 class="animate__animated animate__fadeInDown animate__slow">Innovative Renewable Energy</h1>
            <p class="animate__animated animate__fadeInUp animate__slower">
              Harness the power of advanced technology to build a cleaner, brighter future.
            </p>
            <div class="hero-buttons">
              <a href="/faq" class="btn btn-primary animate__animated animate__zoomIn animate__delay-1s" aria-label="Learn more via FAQ">Learn More</a>
              <a href="/contact" class="btn btn-secondary animate__animated animate__zoomIn animate__delay-1s" aria-label="Get in Touch">Get in Touch</a>
            </div>
          </div>
        </div>
        <!-- Slide 3 -->
        <div class="carousel-item hero-carousel-item">
          <img src="/images/3.jpeg" alt="Clean &amp; Green Solutions" loading="lazy">
          <div class="hero-overlay"></div>
          <div class="hero-content">
            <h1 class="animate__animated animate__fadeInDown animate__slow">Clean &amp; Green Solutions</h1>
            <p class="animate__animated animate__fadeInUp animate__slower">
              Pioneering sustainable practices that set new industry benchmarks.
            </p>
            <div class="hero-buttons">
              <a href="/faq" class="btn btn-primary animate__animated animate__zoomIn animate__delay-1s" aria-label="Learn more via FAQ">Learn More</a>
              <a href="/contact" class="btn btn-secondary animate__animated animate__zoomIn animate__delay-1s" aria-label="Reach Out">Reach Out</a>
            </div>
          </div>
        </div>
      </div>
      <!-- Carousel Controls -->
      <button class="carousel-control-prev" type="button" data-bs-target="#heroCarousel" data-bs-slide="prev" aria-label="Previous Slide">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </button>
      <button class="carousel-control-next" type="button" data-bs-target="#heroCarousel" data-bs-slide="next" aria-label="Next Slide">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </button>
    </div>
    <!-- Scroll Down Indicator -->
    <div class="scroll-indicator" onclick="document.querySelector('main').scrollIntoView({ behavior: 'smooth' })">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512">
        <path d="M207.029 381.476L12.686 187.132c-12.497-12.497-12.497-32.758 0-45.255l22.627-22.627c12.497-12.497 32.758-12.497 45.255 0L224 284.118l143.432-143.432c12.497-12.497 32.758-12.497 45.255 0l22.627 22.627c12.497 12.497 12.497 32.758 0 45.255L240.971 381.476c-12.497 12.497-32.758 12.497-45.255 0z"/>
      </svg>
    </div>
  </section>
</main>

