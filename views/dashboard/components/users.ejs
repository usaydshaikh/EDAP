<% if (isUserSignedIn) { %>
    <%- include('../dashboardPartials/_dashboardHeader.ejs') %>

    <div class="container mt-4">
        <div class="row mb-4">
            <div class="d-flex justify-content-between align-items-center">
                <h2>User Management</h2>
                <form class="ms-3 w-50" action="/dashboard/users" method="GET">
                    <div class="input-group">
                        <span class="input-group-text bg-white border-end-0">
                            <i class="fas fa-search text-muted"></i>
                        </span>
                        <input type="search" class="form-control border-start-0" 
                            placeholder="Search users..." name="search"
                            value="<%= locals.search || '' %>" onkeyup="filterUsers(event)"
                            aria-label="Search users" />
                    </div>
                </form>
            </div>
        </div>

        <% if (messages.success) { %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <%= messages.success %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        <% } %>

        <% if (messages.error) { %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <%= messages.error %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        <% } %>

        <div class="card mb-4 border-0">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Role</th>
                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody id="userList">
                            <% users.forEach(user => { %>
                                <tr id="userRow-<%= user.employee_id %>" class="align-middle">
                                    <!-- View Mode -->
                                    <td class="view-mode-<%= user.employee_id %>"><%= user.employee_id %></td>
                                    <td class="view-mode-<%= user.employee_id %>">
                                        <%= user.first_name %> <%= user.last_name %>
                                    </td>
                                    <td class="view-mode-<%= user.employee_id %>"><%= user.email %></td>
                                    <td class="view-mode-<%= user.employee_id %>">
                                        <% 
                                            let roleName;
                                            switch(user.role_id) {
                                                case 1: roleName = "Executive"; break;
                                                case 2: roleName = "Director"; break;
                                                case 3: roleName = "Manager"; break;
                                                case 4: roleName = "Staff"; break;
                                                default: roleName = "User";
                                            }
                                        %>
                                        <span class="badge bg-secondary px-3 py-2"><%= roleName %></span>
                                    </td>
                                    <td class="text-end view-mode-<%= user.employee_id %>">
                                        <button type="button" class="btn btn-outline-primary btn-sm <%= loggedUser.permissions >= 6 ? '' : 'disabled' %>"
                                                onclick="showEditMode('<%= user.employee_id %>')">
                                            <i class="fas fa-pencil-alt me-1"></i> Edit
                                        </button>
                                        <button type="button" class="btn btn-outline-danger btn-sm ms-2 <%= loggedUser.permissions !== 7 ? 'disabled' : '' %>"
                                                onclick="confirmDelete('<%= user.employee_id %>')">
                                            <i class="fas fa-trash-alt me-1"></i> Delete
                                        </button>
                                    </td>

                                    <!-- Edit Mode (Initially Hidden) -->
                                    <td colspan="5" class="edit-mode-<%= user.employee_id %> d-none">
                                        <form action="/auth/update-profile" method="POST" class="row g-3 py-2">
                                            <input type="hidden" name="userId" value="<%= user.employee_id %>">
                                            
                                            <div class="col-md-2">
                                                <label class="form-label small text-muted">ID</label>
                                                <div class="form-control-plaintext"><%= user.employee_id %></div>
                                            </div>
                                            
                                            <div class="col-md-3">
                                                <label for="firstName-<%= user.employee_id %>" class="form-label small text-muted">First Name</label>
                                                <input type="text" class="form-control" name="firstName" 
                                                    id="firstName-<%= user.employee_id %>" value="<%= user.first_name %>">
                                            </div>
                                            
                                            <div class="col-md-3">
                                                <label for="lastName-<%= user.employee_id %>" class="form-label small text-muted">Last Name</label>
                                                <input type="text" class="form-control" name="lastName" 
                                                    id="lastName-<%= user.employee_id %>" value="<%= user.last_name %>">
                                            </div>
                                            
                                            <div class="col-md-2">
                                                <label for="role-<%= user.employee_id %>" class="form-label small text-muted">Role</label>
                                                <select name="roleId" class="form-select" id="role-<%= user.employee_id %>">
                                                    <option value="1" <%= user.role_id === 1 ? 'selected' : '' %>>Executive</option>
                                                    <option value="2" <%= user.role_id === 2 ? 'selected' : '' %>>Director</option>
                                                    <option value="3" <%= user.role_id === 3 ? 'selected' : '' %>>Manager</option>
                                                    <option value="4" <%= user.role_id === 4 ? 'selected' : '' %>>Staff</option>
                                                    <option value="5" <%= user.role_id === 5 ? 'selected' : '' %>>User</option>
                                                </select>
                                            </div>
                                            
                                            <div class="col-md-2 d-flex align-items-end">
                                                <div class="d-flex gap-2">
                                                    <button type="submit" class="btn btn-success">
                                                        <i class="fas fa-save me-1"></i> Save
                                                    </button>
                                                    <button type="button" class="btn btn-secondary" 
                                                            onclick="hideEditMode('<%= user.employee_id %>')">
                                                        Cancel
                                                    </button>
                                                </div>
                                            </div>
                                        </form>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
         <!-- Pagination -->
        <% if (totalPages> 1) { %>
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center">
                    <li class="page-item <%= current === 1 ? 'disabled' : '' %>">
                        <a class="page-link" href="/dashboard/users/?page=1">
                            <i class="fas fa-angle-double-left"></i>
                        </a>
                    </li>
                    <li class="page-item <%= current === 1 ? 'disabled' : '' %>">
                        <a class="page-link" href="/dashboard/users/?page=<%= current > 1 ? current - 1 : 1 %>">
                            <i class="fas fa-angle-left"></i>
                        </a>
                    </li>
                    <% for (let i=Math.max(1, current - 1); i <=Math.min(totalPages, current + 1); i++) { %>
                        <li class="page-item <%= i === current ? 'active' : '' %>">
                            <a class="page-link" href="/dashboard/users/?page=<%= i %>">
                                <%= i %>
                            </a>
                        </li>
                    <% } %>
                    <li class="page-item <%= current === totalPages ? 'disabled' : '' %>">
                        <a class="page-link" href="/dashboard/users/?page=<%= current + 1 %>">
                            <i class="fas fa-angle-right"></i>
                        </a>
                    </li>
                    <li class="page-item <%= current === totalPages ? 'disabled' : '' %>">
                        <a class="page-link" href="/dashboard/users/?page=<%= totalPages %>">
                            <i class="fas fa-angle-double-right"></i>
                        </a>
                    </li>
                </ul>
            </nav>
        <% } %>
    </div>

    <!-- Delete Confirmation Modal -->
    <div class="modal fade" id="deleteConfirmModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirm Deletion</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete this user? This action cannot be undone.
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <form action="/auth/delete-user" method="POST" id="deleteUserForm">
                        <input type="hidden" name="userId" id="deleteUserId">
                        <button type="submit" class="btn btn-danger">Delete User</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script>
        function showEditMode(userId) {
            // Hide view mode
            document.querySelectorAll(`.view-mode-${userId}`).forEach(el => {
                el.classList.add('d-none');
            });
            
            // Show edit mode
            document.querySelectorAll(`.edit-mode-${userId}`).forEach(el => {
                el.classList.remove('d-none');
            });
        }
        
        function hideEditMode(userId) {
            // Show view mode
            document.querySelectorAll(`.view-mode-${userId}`).forEach(el => {
                el.classList.remove('d-none');
            });
            
            // Hide edit mode
            document.querySelectorAll(`.edit-mode-${userId}`).forEach(el => {
                el.classList.add('d-none');
            });
        }
        
        function confirmDelete(userId) {
            document.getElementById('deleteUserId').value = userId;
            const deleteModal = new bootstrap.Modal(document.getElementById('deleteConfirmModal'));
            deleteModal.show();
        }

        function filterUsers(event) {
            const searchTerm = event.target.value.toLowerCase();
            const rows = document.querySelectorAll('#userList tr');

            rows.forEach(row => {
                const text = row.textContent.toLowerCase();
                row.style.display = text.includes(searchTerm) ? '' : 'none';
            });
        }
    </script>

    <%- include('../dashboardPartials/_dashboardFooter.ejs') %>
<% } %>